<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="250dp"
            android:layout_marginTop="-120dp"
            android:layout_marginLeft="180dp">
            <ImageView
                android:layout_width="145dp"
                android:layout_height="250dp"
                android:background="@drawable/vector"
                ></ImageView>
        </LinearLayout>

        <Button
            android:id="@+id/btnback"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="X"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            app:backgroundTint="#ffffff"></Button>
        <ImageView
            android:id="@+id/view4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/pink"></ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-110dp"
            android:background="@drawable/vectoryellow"
            android:rotationX="200"></ImageView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true">
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:cardCornerRadius="50dp"
                >
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@drawable/person"></ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="70dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:layout_height="10dp"
                    android:background="@drawable/camera"
                    ></ImageView>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="toan"
            android:textColor="#000000"
            android:textSize="15dp"></TextView>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#83000000"
            android:layout_below="@+id/textname"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:layout_centerHorizontal="true"></TextView>
        <TextView
            android:id="@+id/tvfullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:layout_below="@+id/text4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"></TextView>

        <EditText
            android:id="@+id/editfullname"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvfullname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom1"
            android:text="toan"

            android:textSize="15dp"></EditText>
        <TextView
            android:id="@+id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            android:layout_below="@+id/editfullname"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"></TextView>
        <EditText
            android:id="@+id/editemail"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvemail"
            android:text="toan@gmail.com"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom1"></EditText>
        <TextView
            android:id="@+id/tvphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_below="@+id/editemail"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"></TextView>
        <EditText
            android:id="@+id/editphone"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvphone"
            android:text="0354922786"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom1"></EditText>

        <Button
            android:id="@+id/btnout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/editphone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom2"
            android:drawableLeft="@drawable/power"
            android:text="log out"
            android:textStyle="normal"
            app:backgroundTint="#ff673d">

        </Button>
    </RelativeLayout>
</FrameLayout>
